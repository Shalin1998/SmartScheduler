<style>
.day{
  padding-right: 30px;
  padding-bottom: 30px;
  padding-left: 5px;
}
th{
  width: 100px;
  height:30px;
  border: 1px solid #ccc;
  text-align: center;
}
td{
  border: 1px solid #ccc;
  height: 90px;
}
.date_day{
  margin-top:-10px;
}
.event{
  border-radius: 3px;
  background-color: #88ee88;
  margin-bottom:-40px;
  text-align: center;
}
.prev-month, .next-month{
  background-color: #eee;
}
.calendar-header{
  font-size: 30px;
}
a{
  color: #448844;
}
a:hover{
  color: #99ff99;
  text-decoration: none;
}
.calendar-header{
  color: #448844;
  padding: 10px;
}
.calendar-header span{
  padding: 15px;
}
td a{
  color: white;
}
td a:hover{
  color: #338833;
  text-decoration: none;
}
.cal{
  margin-top: -30px;
}
</style>
<center>
  <div class="cal">
    <%= month_calendar previous_link: ->(param, date_range) { link_to raw("&laquo;"), {param => date_range.first - 1.day} } do |date| %>
    <div class="date_day">
    <%= date.day %>
  </div>
    <% @tournament.games.each do |f| %>
        <% if f.date_time.to_date == date %>
        <% if false %>
        <a href="/tournaments/<%= @tournament.id %>/games/<%= f.id %>">
          <% end %>
          <div class="event">
          <%= Team.find(f.team_one).name %> vs <%= Team.find(f.team_two).name %>
        </div>
        <% if false %>
      </a>
      <% end %>
        <% end %>
    <% end %>
  <% end %>
</div>
</center>
