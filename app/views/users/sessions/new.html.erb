  <body>
    <div class="wrapper">
	<div class="container">
		<h1 style="color:white;" class="animated fadeInDown">Login</h1>
<center>
        <%= form_for(resource, as: resource_name, class: "form", url: session_path(resource_name)) do |f| %>
            <div class="field animated fadeInDown">
              <%= f.email_field :email, placeholder: "Email", style: "padding: 10px 15px;" %>
            </div>

            <div class="field animated fadeInDown">
              <%= f.password_field :password, autocomplete: "off", placeholder: "Password", style: "padding: 10px 15px;" %>
            </div>

            <div class="actions">
              <%= f.submit "Log in", id: "login-button",class: "animated fadeInDown" %>
            </div>
            <% end %>

				</div>
      </div>
    </center>
